{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "target": "esnext",
        "jsx": "preserve",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"],
            "~~/*": ["./*"],
            "@@/*": ["./*"]
        }
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
}

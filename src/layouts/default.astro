---
import MainHead from '../components/MainHead.astro'
import Footer from '../components/Footer.astro'
import Nav from '../components/Nav.astro'

export type Props = {
  title?: string
  description?: string
}

const { title, description } = Astro.props
---

<html lang="de">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body
    class="bg-neutral-50 text-black antialiased dark:bg-neutral-800 dark:text-white"
  >
    <Nav />
    <header>
      <slot name="header" />
    </header>
    <main>
      <slot name="content" />
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>
